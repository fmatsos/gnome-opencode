{
  "name": "gnome-stats-exporter",
  "version": "1.0.0",
  "description": "OpenCode plugin to export token usage statistics for GNOME Shell extension",
  "type": "module",
  "main": "gnome-stats-exporter.ts",
  "scripts": {
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js tests/",
    "test:watch": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js tests/ --watch",
    "test:coverage": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js tests/ --coverage"
  },
  "keywords": [
    "opencode",
    "plugin",
    "gnome",
    "statistics",
    "token-tracking"
  ],
  "author": "fmatsos",
  "license": "GPL-3.0-or-later",
  "peerDependencies": {
    "@opencode-ai/plugin": "*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}
